<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="textInputDropDownWithSearchStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@color/color_et_bg</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">@dimen/_4sdp</item>
        <item name="boxCornerRadiusTopEnd">@dimen/_4sdp</item>
        <item name="boxCornerRadiusBottomStart">@dimen/_4sdp</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/_4sdp</item>
        <item name="boxStrokeColor">@color/borderColor_alpha</item>
        <item name="boxStrokeWidth">0.5dp</item>
        <item name="hintEnabled">false</item>
        <item name="hintAnimationEnabled">false</item>
        <item name="placeholderTextColor">@color/color3C3C3C</item>
    </style>

    <style name="textEditTextAuthStyle">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:longClickable">false</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:textColorHint">@color/color_hint</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="textAutoCompleteStyle" parent="textEditTextAuthStyle">
        <item name="android:dropDownSelector">@android:color/transparent</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:longClickable">false</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textIsSelectable">false</item>
    </style>
</resources>